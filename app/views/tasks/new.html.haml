.container
  %h1
    New Task
  .row
    = form_for @task do |f|
      .col-md-4
        = f.label :title
        = f.text_field :title, class: "form-control"
        = f.label :description
        = f.text_field :description, class: "form-control"
        %br
        = content_tag :button, "Add Task", type: :submit, class: "btn btn-primary"
