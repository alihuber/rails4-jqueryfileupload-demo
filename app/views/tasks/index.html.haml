.container
  %h1
    Listing Tasks

  %table.table
    %thead
      %tr
        %th Title
        %th Description
    %tbody
      - @tasks.each do |task|
        %tr
          %td= task.title
          %td= task.description
          %td= link_to "Destroy", task_path(task), method: :delete, data: { confirm: "Are you sure?" }
  %br/
  = link_to "New Task", new_task_path
